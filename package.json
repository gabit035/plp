{
  "name": "ponete-las-pilas",
  "version": "1.1.0",
  "description": "App inteligente de micro hábitos con notificaciones personalizadas",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist build"
  },
  "keywords": ["habits", "productivity", "health", "notifications", "electron"],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "rimraf": "^5.0.0"
  },
  "build": {
    "appId": "com.ponetelas.pilas",
    "productName": "¡Ponete Las Pilas!",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "assets/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg", 
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    }
  }
}